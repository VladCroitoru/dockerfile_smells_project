from python:3.6

maintainer "amourlinux"

run pip install --upgrade pip
run pip install scrapy -i http://pypi.douban.com/simple/ --trusted-host pypi.douban.com
run pip install pymysql -i http://pypi.douban.com/simple/ --trusted-host pypi.douban.com
run pip install redis -i http://pypi.douban.com/simple/ --trusted-host pypi.douban.com
run pip install requests -i http://pypi.douban.com/simple/ --trusted-host pypi.douban.com
