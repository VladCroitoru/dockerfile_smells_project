# ENV REDIS_HOST="host.docker.internal"
# ENV REDIS_PORT="6379"

ENV REDIS_MASTER = "mymaster"
ENV REDIS_SENTINEL_1 = "127.0.0.1"
ENV REDIS_SENTINEL_PORT_1 = "6379"
ENV REDIS_SENTINEL_2 = "127.0.0.1"
